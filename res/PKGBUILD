pkgname=cyberdesk
pkgver=1.4.1
pkgrel=0
epoch=
pkgdesc=""
arch=('x86_64')
url=""
license=('AGPL-3.0')
groups=()
depends=('gtk3' 'xdotool' 'libxcb' 'libxfixes' 'alsa-lib' 'libva' 'libappindicator-gtk3' 'pam' 'gst-plugins-base' 'gst-plugin-pipewire')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=pacman_install
changelog=
noextract=()
md5sums=() #generate with 'makepkg -g'

package() {
  if [[ ${FLUTTER} ]]; then
	  mkdir -p "${pkgdir}/usr/share/cyberdesk" && cp -r ${HBB}/flutter/build/linux/x64/release/bundle/* -t "${pkgdir}/usr/share/cyberdesk"
  fi
  mkdir -p "${pkgdir}/usr/bin"
  pushd ${pkgdir} && ln -s /usr/share/cyberdesk/cyberdesk usr/bin/cyberdesk && popd
  install -Dm 644 $HBB/res/cyberdesk.service -t "${pkgdir}/usr/share/cyberdesk/files"
  install -Dm 644 $HBB/res/cyberdesk.desktop -t "${pkgdir}/usr/share/cyberdesk/files"
  install -Dm 644 $HBB/res/cyberdesk-link.desktop -t "${pkgdir}/usr/share/cyberdesk/files"
  install -Dm 644 $HBB/res/128x128@2x.png "${pkgdir}/usr/share/icons/hicolor/256x256/apps/cyberdesk.png"
  install -Dm 644 $HBB/res/scalable.svg "${pkgdir}/usr/share/icons/hicolor/scalable/apps/cyberdesk.svg"
}
